extends default
block content
    div.title
      h1 Add Video
    div.container
        form(method ="POST" action="/video/add")
            #error
                if error    
                    p.text-danger Erorr!!!
                div.form-control
                    div.video
                        label(class="label" for="title" class="sr-only") Title
                            input(type="text" name="title" id="title" class ="form-control" placeholder="Title" required autofocus)
                    div.video
                        label(class="label" for="desc" class="sr-only") Description
                            input(type="text" name="desc" id="desc" class ="form-control" placeholder="Description" required autofocus)
                    div.video
                        label(class="label" for="tagline" class="sr-only") Tagline
                            input(type="text" name="tagline" id="tagline" class ="form-control" placeholder="Title" required autofocus)
                    div.video
                        label(class="label" for="imgSrc" class="sr-only") imgSrc
                            input(type="text" name="imgSrc" id="imgSrc" class ="form-control" placeholder="Image" required autofocus)
                    div.video
                        label(class="label" for="vidSrc" class="sr-only") vidSrc
                            input(type="text" name="vidSrc" id="vidSrc" class ="form-control" placeholder="Title" required autofocus)

                    button(class="button" type="submit") Submit
                            
                                    
                                    
                            